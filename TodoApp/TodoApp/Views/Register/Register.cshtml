@model TodoApp.Models.User
@{
    ViewData["Title"] = "Home Page";
}
<div class="main-subst">
    <h1 class="reghead">Register, if you do not have an account</h1>
    <section class="register">
        <form asp-controller="Register" asp-action="Register" method="post" class="formreg">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="reginp"/>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="reginp"/>
            </div>
            <button type="submit" class="regbtn">Register</button>
        </form>
    </section>
</div>